# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{diff,patch,md}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 8

[*.{c,h,cpp,hpp,cxx,hxx}]
indent_style = tab
indent_size = 4

[*.{nsi,rc,sln,vcproj,vcxproj}]
end_of_line = crlf

[Tracker/{resource.h,XBT\ Tracker.*}]
end_of_line = crlf
